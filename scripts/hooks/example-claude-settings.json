{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Example Claude Code hooks for voice features. Merge these entries into your ~/.claude/settings.json. Copy hook scripts to ~/.claude/hooks/ first.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/waiting_alert_pre.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/waiting_alert_post.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session_end_speak.sh",
            "timeout": 120000
          }
        ]
      }
    ]
  }
}
